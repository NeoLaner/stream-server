{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [".eslintrc.cjs ", "src/**/*.ts", "copy-public.ts"]
}

